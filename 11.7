//add new family
void addfamily(map<string, vector<string>>& familys,string &lastname, vector<string> &childrenname)
{
	
	familys[lastname] = childrenname;
}
//add new child to a pointed family
void addnewchild(map<string, vector<string>> &familys, string &lastname, string newname)
{
	familys[lastname].push_back(newname);
}

//print map
void print(map<string, vector<string>> &familys)
{
	for (auto map_it = familys.begin(); map_it != familys.end(); ++map_it)
	{
		cout<<map_it->first<< " ï¼š ";
		for (auto it = (map_it->second).begin(); it != (map_it->second).end(); ++it)
			cout << *it << " ";
		cout << endl;

	}
}
